<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:strokeColor="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainSR"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#B5D4CB67"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Kalan SÃ¼re : "
        android:textSize="25dp"
        android:layout_above="@+id/RLayout"
        android:layout_marginBottom="45dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:id="@+id/RLayout"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"

            android:id="@+id/txtNrmlOyun"
            android:textSize="25sp"
            android:textStyle= "bold"
            android:text="_ _ _ _ _ _ _ _ _ _ _"
            />

        <EditText
            android:id="@+id/editTxtOyunNM"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtNrmlOyun"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:backgroundTint="#FFC107"
            android:hint="Tahmininizi Giriniz"
            android:textSize="15sp"
            android:textStyle="italic"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTxtOyunNM"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">
            <Button
                android:id="@+id/btnHarfAl"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Harf Al"
                android:textSize="15sp"
                android:textStyle= "italic"
                android:backgroundTint="#8BC34A"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="120dp"
                strokeColor:strokeColor="#000000"

                strokeColor:strokeWidth="2dp"/>
            <Button
                android:id="@+id/btnTahminEtNM"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Tahmnin Et"
                android:textSize="15sp"
                android:textStyle= "italic"
                android:backgroundTint="#F44336"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnSrli"

                strokeColor:strokeColor="#000000"
                android:layout_marginTop="120dp"

                strokeColor:strokeWidth="2dp"/></LinearLayout>
    </RelativeLayout>






</RelativeLayout>